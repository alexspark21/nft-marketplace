{
  "name": "@alexspark21/nft-marketplace",
  "version": "1.0.0",
  "description": "Non-fungible token standard implementation for the Ethereum blockchain.",
  "scripts": {
    "compile": "specron compile",
    "sandbox": "specron sandbox",
    "prepare": "specron compile",
    "test": "specron compile && specron test",
    "solhint": "solhint src/**/*.sol"
  },
  "specron": {
    "compiler": {
      "build": "./build/tests",
      "match": [
        "./src/**/*.sol"
      ]
    },
    "flattener": {
      "build": "./build/tests",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "test": {
      "build": "./build/tests",
      "match": [
        "./src/**/*.test.*"
      ]
    },
    "require": [
      "ts-node/register"
    ]
  },
  "author": "alexspark21",
  "license": "MIT",
  "keywords": [
    "ethereum",
    "blockchain",
    "eth",
    "contract",
    "contracts",
    "smart",
    "smart-contract",
    "smart-contracts",
    "token",
    "tokens",
    "nft",
    "nfts",
    "non-fungible",
    "non-fungibles",
    "eip",
    "erc",
    "erc721",
    "erc-721",
    "deed",
    "standard"
  ],
  "devDependencies": {
    "@specron/cli": "^0.17.6",
    "@specron/flattener": "^0.17.6",
    "@specron/spec": "^0.17.6",
    "@types/node": "^14.14.20",
    "ethers": "^5.4.4",
    "solc": "0.8.0",
    "solhint": "3.3.2",
    "solidity-coverage": "^0.7.16",
    "truffle-plugin-verify": "^0.5.11",
    "ts-node": "9.1.1",
    "typescript": "4.1.3",
    "web3": "1.3.1"
  },
  "dependencies": {
    "@truffle/hdwallet-provider": "^1.4.2",
    "dotenv": "^10.0.0",
    "fs": "^0.0.1-security"
  }
}
